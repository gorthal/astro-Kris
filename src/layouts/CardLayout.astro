<!doctype html>
---
const { frontmatter } = Astro.props;
---
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="./output.css" rel="stylesheet">
		<title>Le Bazar de Kris</title>
	</head>
<body>
    <div class="card card-image-cover">
       <div class="card-border border rounded-xl border-yellow-600 ">
        <slot name="image" />
        <div class="card-body">
            <h2 class="card-header"><slot name="titre" /></h2>
          <p class="text-content2"><slot name="contenu" /></p>
          <div class="card-footer">
            <button class="btn shadow-lg shadow-orange-600/50 text-slate-800 "><slot name="lien" /></button>
            <p><slot name="categorie" /></p>
          </div>
        </div>
    </div>
      </div>
    
</body>
</html>